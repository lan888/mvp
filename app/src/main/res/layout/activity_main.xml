<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0ebeb"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <TextView
        android:id="@+id/main_activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="欢迎使用租房管理系统"
        android:textSize="20sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_activity_title"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="By Ian"
        android:textSize="20sp" />
    <com.example.ian.mvp.widget.RoundImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/admin_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@mipmap/admin_photo"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tt"
        android:layout_below="@id/admin_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/admin_login_activity_name_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/admin_layout_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/input_box"
            android:gravity="center"
            android:hint="请输入账户"
            android:maxLines="1"
            android:paddingLeft="@dimen/input_box_left_padding"
            android:textColor="@color/grey_text" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tt">
        <EditText
            android:id="@+id/admin_login_activity_password_input"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tt"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/input_box"
            android:gravity="center"
            android:hint="请输入密码或验证码"
            android:inputType="numberPassword"
            android:maxLines="1"
            android:paddingLeft="@dimen/input_box_left_padding"
            android:textColor="@color/grey_text" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/admin_login_activity_login"
        style="@style/common_button_style"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tt2"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="登录" />
    <Button
        android:id="@+id/login_activity_phoneLogin"
        style="@style/common_button_style"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tt"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="获取验证码" />

    <TextView
        android:id="@+id/admin_login_activity_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/admin_login_activity_login"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="注册"
        android:textColor="@color/blue_text"
        android:textSize="@dimen/font_normal" />

    <TextView
        android:id="@+id/admin_login_activity_forgetNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/admin_login_activity_login"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:text="忘记密码?"
        android:textColor="@color/blue_text"
        android:textSize="@dimen/font_normal" />






</RelativeLayout>
