<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/selector_bg_item">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/cb"
        android:layout_toRightOf="@+id/cb"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-12-15 10:00" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_src"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="茂源大厦" />
        <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_dest"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="阿里巴巴" />



    </LinearLayout>
    <TextView
    android:id="@+id/WaterBill"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="165dp"
    android:layout_marginTop="18dp"
    android:drawablePadding="5dp"
    android:gravity="center"
    android:text="阿里巴巴" />
    <TextView
        android:id="@+id/ElectricityBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="38dp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="阿里巴巴" />


    <TextView
        android:id="@+id/rmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="元" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/rmb"
        android:text="5000"
        android:textColor="#785425" />

</RelativeLayout>